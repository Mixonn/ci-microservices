{
    "services": [
        {
            "name": "ElasticSearch",
            "port": 9200,
            "check": {
                "id": "ElasticSearch-health",
                "name": "HTTP health",
                "http": "http://es:9200/_cluster/health",
                "interval": "10s",
                "timeout": "1s"
            }
        },
        {
            "name": "Kibana",
            "port": 5601,
            "check": {
                "id": "Kibana-health",
                "name": "HTTP health",
                "http": "http://kibana:5601/api/status",
                "interval": "60s",
                "timeout": "5s"
            }
        },
        {
            "name": "MongoDB",
            "port": 5601,
            "check": {
                "id": "MongoDB-health",
                "name": "HTTP health",
                "http": "http://mongo:27017/",
                "interval": "60s",
                "timeout": "5s"
            }
        },
        {
            "name": "Graphite",
            "port": 8090,
            "check": {
                "id": "Graphite-health",
                "name": "HTTP health",
                "http": "http://graphite:8080/",
                "interval": "60s",
                "timeout": "5s"
            }
        },
        {
            "name": "Grafana",
            "port": 8091,
            "check": {
                "id": "Grafana-health",
                "name": "HTTP health",
                "http": "http://grafana:3000/",
                "interval": "60s",
                "timeout": "5s"
            }
        },
        {
            "name": "Zipkin",
            "port": 9411,
            "check": {
                "id": "Zipkin-health",
                "name": "HTTP health",
                "http": "http://zipkin:9411/health",
                "interval": "60s",
                "timeout": "5s"
            }
        }
    ]
}
